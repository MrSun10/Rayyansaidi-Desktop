{
  "name": "rayyansaidi-desktop",
  "version": "2.1.0",
  "description": "rayyansaidi-desktop",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager ./",
    "package:darwin": "electron-packager ./ --platform=darwin --arch=all --icon=./elmo.icns --out=./dist",
    "package:win32": "electron-packager ./ --platform=win32 --arch=all --icon=./elmo.ico --out=./dist",
    "package:linux": "electron-packager ./ --platform=linux --arch=all --icon=./elmo.png --out=./dist",
    "build:darwin:dmg": "appdmg dmg.json dist/rayyansaidi-desktop-darwin-x64/dist/rayyansaidi-desktop.dmg",
    "build:darwin:pkg": "pkgbuild --component ./dist/rayyansaidi-desktop-darwin-x64/rayyansaidi-desktop.app ./dist/rayyansaidi-desktop-darwin-x64/dist/rayyansaidi-desktop.pkg",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Rayyan Saidi and Nathan Chu",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "^8.3.4",
    "electron-builder": "^22.7.0",
    "electron-packager": "^15.0.0",
    "electron-winstaller": "^4.0.1"
  },
  "optionalDependencies": {
    "appdmg": "^0.6.0"
  },
  "build": {
    "dmg": {
              "title": "Install",
              "icon": "/Volumes/rayyansaidi.com/rayyansaidi.com.app/Contents/Resources/Elmo.icns",
              "background": "background.png",
              "format": "UDZO",
              "contents": [
                { "x": 445, "y": 290, "type": "link", "path": "/Applications" },
                { "x": 445, "y": 140, "type": "dir", "path": "rayyansaidi-desktop.app" },
                { "x": 650, "y": 450, "type": "file", "path": ".background" },
                { "x": 650, "y": 450, "type": "file", "path": ".VolumeIcon.icns" },
                { "x": 650, "y": 450, "type": "file", "path": ".DS_Store" }
              ]
            }
  }
}

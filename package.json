{
  "name": "rayyansaidi-desktop",
  "version": "2.1.0",
  "description": "This is the app version of rayyansaidi.com",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager ./",
    "package:darwin": "electron-packager ./ --platform=darwin --arch=all --icon=./elmo.icns --out=./dist",
    "package:win32": "electron-packager ./ --platform=win32 --arch=all --icon=./elmo.ico --out=./dist",
    "package:linux": "electron-packager ./ --platform=linux --arch=all --icon=./elmo.png --out=./dist",
    "build:darwin:dmg": "appdmg build/dmg.json dist/mac/rayyansaidi-desktop.dmg",
    "build:darwin:pkg": "pkgbuild --component ./dist/rayyansaidi-desktop-darwin-x64/rayyansaidi-desktop.app ./dist/rayyansaidi-desktop-darwin-x64/dist/rayyansaidi-desktop.pkg",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Rayyan Saidi and Nathan Chu",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "^8.4.1",
    "electron-builder": "^22.7.0",
    "semver": "^7.3.2",
    "appdmg": "^0.6.0"
  },
  "build": {
    "dmg": {
      "title": "Install",
      "format": "UDZO",
      "contents": [
        {
          "x": 445,
          "y": 140
        },
        {
          "x": 445,
          "y": 290,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 576,
        "height": 404
      }
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "semver": "^7.3.2"
  }
}
